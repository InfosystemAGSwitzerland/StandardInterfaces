          },
          {
            "schema": {
              "type": "integer",
              "format": "int64",
              "maximum": 999999,
              "minimum": 1
            },
            "in": "query",
            "name": "companyNo",
            "description": "The CompanyNo identifies the customer via the corresponding number in the mandate system."
          }
        ],
        "description": "Returns all matching absences."
      },
