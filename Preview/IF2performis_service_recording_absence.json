            "in": "query",
            "name": "serviceProviderDayId",
            "description": "Key to fetch all absences from the given day/performance/performing unit."
          },
          {
            "schema": {
              "type": "string",
              "format": "date"
            },
            "in": "query",
            "name": "servicePerformanceDay",
